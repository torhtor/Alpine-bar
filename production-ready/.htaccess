# Security Headers for Alpine Bar Website
# Configuration Apache pour améliorer la sécurité

# Forcer HTTPS et redirections canoniques
RewriteEngine On

# Redirection HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirections index.html vers / (canonique)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ / [R=301,L]

# Redirection en/index.html vers /en/ (canonique)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+en/index\.html[\s?] [NC]
RewriteRule ^en/index\.html$ /en/ [R=301,L]

# Content Security Policy (CSP) - Compatible avec Google bots
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://region1.google-analytics.com https://stats.g.doubleclick.net; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"

# Autoriser les bots Google explicitement
<RequireAll>
    Require all granted
    # Pas de restriction d'accès pour les bots
</RequireAll>

# X-Frame-Options - Protection contre le clickjacking
Header always set X-Frame-Options "DENY"

# X-Content-Type-Options - Empêche le MIME sniffing
Header always set X-Content-Type-Options "nosniff"

# X-XSS-Protection - Protection XSS (legacy mais recommandé)
Header always set X-XSS-Protection "1; mode=block"

# Referrer Policy - Contrôle des informations de référent
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Permissions Policy - Contrôle des API sensibles
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"

# Strict Transport Security (HSTS) - Force HTTPS pour 1 an
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Retire les headers révélant des informations serveur
Header unset Server
Header unset X-Powered-By

# Cache Control pour les ressources statiques
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Pas de cache pour les pages HTML
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Protection des fichiers sensibles
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Désactiver l'affichage des répertoires
Options -Indexes

# Configuration des pages d'erreur
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html
ErrorDocument 500 /index.html